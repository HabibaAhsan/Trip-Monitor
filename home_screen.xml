<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a05e91e7b54986e9303bfdf2aca7f25c"
    tools:context=".homeScreen">

    <Button
        android:id="@+id/start_btn"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:backgroundTint="#D2E7EBDA"
        android:text="START"
        android:textColor="#CB38522D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_marginEnd="76dp"
        android:backgroundTint="#D2E7EBDA"
        android:text="STOP"
        android:textColor="#CB38522D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/trips_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:backgroundTint="#D2E7EBDA"
        android:text="TRIPS"
        android:textColor="#33691E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="285dp"
        android:layout_height="347dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="120dp"
        app:cardBackgroundColor="#D2E7EBDA"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/trip_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingEnd="10sp"
                android:paddingRight="10sp"
                android:text="TextView"
                android:textColor="#CB38522D" />
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/trip_no"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/alex_brush"
        android:text="Trip 10"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#38522D"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>